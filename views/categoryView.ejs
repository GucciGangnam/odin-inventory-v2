<!DOCTYPE html>
<html>

<head>
    <title>
        <%= pagetitle %>
    </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <!-- NAVIGATION BAR -->
    <div class="NavBar">
        <h1>
            Categories
        </h1>
        <a class="NavBarLink" href="/">Home</a>
        <a class="NavBarLink" href="/categories">Categories</a>
        <a class="NavBarLink" href="/products">Products</a>
        <input placeholder="Search product" />
    </div>
    <!-- NAVIGATION BAR -->

    <!-- PAGE CONTENT -->
<h1> <%= categoryName %></h1>
<h1> <%= categoryDescription %></h1>
<br/>
<p>
    There are <%= numProductsInCategory %> products in this category:
</p>
<ul>
    <% productsInCategory.forEach(item=> { %>
        <li>
            <a href="/<%= item.url %>"><%= item.name %></a>
            
        </li>
        <% }); %>
</ul>

<a class="button-link" href="<%= categoryName %>/edit"> Edit Category </a>
<br/>
<a class="button-link" href="<%= categoryName %>/delete"> Delete Category </a>

    <!-- PAGE CONTENT -->






</body>

</html>